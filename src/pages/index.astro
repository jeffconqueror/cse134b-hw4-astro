---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
---

<BaseLayout title="Home - Jingcheng Li">
  <section class="hero">
    <h1>Welcome to My Research Portfolio</h1>
    <p>Computer Vision • 3D Graphics • Multimodal AI</p>
  </section>

  <section class="featured">
    <h2>Featured Projects</h2>
    <div class="projects-grid">
      <ProjectCard 
        title="3D Object Asset Rigging"
        description="Automated pipeline for creating game-ready 3D assets from text descriptions."
        tags={["Blender", "Python", "3D Vision"]}
        link="/blog/post1"
      />
      <ProjectCard 
        title="Low-Light Image Enhancement"
        description="Deep learning model for enhancing images taken in poor lighting conditions."
        tags={["PyTorch", "CNN", "Computer Vision"]}
        link="/blog/post2"
      />
      <ProjectCard 
        title="Video Reasoning System"
        description="AI system for temporal understanding and reasoning about video content."
        tags={["Transformers", "PyTorch", "NLP"]}
        link="/blog/post3"
      />
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    text-align: center;
    padding: 4rem 2rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 12px;
    margin-bottom: 3rem;
  }
  
  .hero h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .hero p {
    font-size: 1.25rem;
    opacity: 0.9;
  }
  
  .featured {
    margin: 3rem 0;
  }
  
  .featured h2 {
    text-align: center;
    color: #2c3e50;
    margin-bottom: 2rem;
  }
  
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
</style>